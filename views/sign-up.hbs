<form
  action = '/authentication/sign-up'
  method='POST'
  enctype='multipart/form-data'
>
  <label for='input-name'>Username</label>
  <input type='text' id='input-name' name='name' placeholder='Your Username' />
  <label for='input-firstname'>First Name</label>
  <input type='text' id='input-firstname' name='firstname' placeholder='Your First Name' />
  <label for='input-lastname'>Last Name</label>
  <input type='text' id='input-lastname' name='lastname' placeholder='Your Last Name' />
  <label for='input-email'>Email</label>
  <input type='email' id='input-email' name='email' placeholder='Your Email' />
  <label for='input-password'>Password</label>
  <input
    type='password'
    name='password'
    id='input-password'
    placeholder='A Strong Password'
  />
<label for='input-picture'>Profile Picture</label>
  <input id='input-picture' type='file' name='picture' accept='image/*'

<button type="submit">Sign Up</button>
  
</form>

<button type="submit">Sign Up</button>
