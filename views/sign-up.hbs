<form
  action='/authentication/sign-up'
  method='POST'
  enctype='multipart/form-data'
>
  <label for='input-name'>Username</label>
  <input
    type='text'
    id='input-name'
    name='username'
    placeholder='Your Username'
  />
  <label for='input-email'>Email</label>
  <input type='email' id='input-email' name='email' placeholder='Your Email' />
  <label for='input-password'>Password</label>
  <input
    type='password'
    name='password'
    id='input-password'
    placeholder='A Strong Password'
  />
  <label for='input-picture'>Profile Picture</label>
  <input id='input-picture' type='file' name='picture' accept='image/*' />

  <button>Sign Up</button>

</form>