<img src='{{recipe.picture}}' alt='{{recipe.title}}' />

<h1>{{recipe.title}}</h1>
<p>{{recipe.level}}</p>
<p>{{recipe.cookingTime}}</p>
<p>{{recipe.diet}}</p>
<p>{{recipe.cuisine}}</p>
<p>{{recipe.dishType}}</p>

<ul>
  {{#each recipe.ingredients}}
  <li>{{this}}</li>
  {{/each}}
</ul>

<ul>
  {{#each recipe.instructions}}
  <li>{{this}}</li>
  {{/each}}
</ul>

<form action='/recipe/{{recipe._id}}/send' method='POST'>
  <label for='input-name'>Name</label>
  <input type='text' id='input-name' name='name' placeholder='Your Name' />

  <label for='input-email'>Email</label>
  <input type='email' id='input-email' name='email' placeholder="Your Friend's Email" required />

  <label for='input-subject'>Subject</label>
  <input type='text' id='input-subject' name='subject' placeholder='Subject' required />

  <label for='input-message'>Message</label>
  <input type='text' name='message' id='input-message' placeholder='Your Message' required />

  <button>Send Recipe to Friend</button>
</form>

{{#if ownRecipe}}
<a href='/recipe/{{recipe._id}}/edit'>
  <button>Update Recipe</button>
</a>
<form action='/recipe/{{recipe._id}}/delete' method='post'>
  <button>Delete Recipe Forever</button>
</form>
{{/if}}

{{#unless ownRecipe}}
<button>♥️</button>
{{/unless}}
